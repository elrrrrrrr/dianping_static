@import "base-old.v10.css";
@import "base.css";
@import "common.css";

.banner-bg
	background url(../images/bg-block1.jpg) center bottom repeat-x
	height 994px
	.banner,
	.banner .width1000
			background url(../images/banner.jpg) center top no-repeat
			height 475px
	.luckydraw
		width 869px
		height 490px
		margin 5px auto 20px
		.left
			float left
			width 494px
			height 100%
			.grid-area
				width 454px
				height 454px
				position relative
				top 18px
				left 20px
				#grid
					z-index 50
				.animating
					-webkit-transition all 0.5s ease
					-moz-transition all 0.5s ease
					-ms-transition all 0.5s ease
					-o-transition all 0.5s ease
					transition all 0.5s ease
				.cell 
					overflow hidden
					.front,
					.back
						position absolute
						width 100%
						height 100%
						top 0
						overflow hidden
						z-index 0
						-webkit-backface-visibility hidden
						-moz-backface-visibility hidden
						backface-visibility hidden
						img
							width 148px
							height 148px
							display block
							position absolute
					.front
						left 0
						cursor pointer
					.back
						right 0

		.right
			position relative
			float left
			width 366px
			height 100%
			margin-top 18px
			.rules-box,
			.prize-list
				width 347px
				height 307px
				background url(../images/rules-bg.png) top left repeat
				position relative
			.rules,
			.list
				margin 0 6px 7px
				.title
					background-color #e2e1de
					height 44px
					line-height 44px
					padding-left 20px
					font-size 18px
					color #240801
					position relative
					.text
						i
							margin-right 7px
					a
						display block
						text-align center
						font-size 15px
						width 98px
						height 32px
						color #ff6522
						background-color #fff
						line-height 32px
						position absolute
						right 28px
						top 6px
				.rules-text,
				.list-text
					background-color #fff
					height 255px
					ul
						padding 8px 20px
						li
							font-size 13px
							line-height 26px
							span
								color #ff6522
							a
								img
									height 26px
									vertical-align -8px
						
			.prize-list
				margin-top 8px
				height 148px
				.list-text
					height 97px
					background-color #fff
					.wraper
						padding 8px 20px
						overflow hidden
						height 75px
						.roller
							padding 0
							li
								font-size 14px
								line-height 26px
								color #322

.rules-detail
	position absolute
	width 336px
	height 367px
	top 35px
	left 0
	.rules-detail-title
		width 336px
		height 62px
		background url(../images/popupbox-rules-header.png) center top no-repeat
		.btn-rules-detail-title
			display block
			width 26px
			height 26px
			float right
			margin-right 15px
			margin-top 36px
	.rules-detail-mome
		background-color #fff
		border 1px solid #444444
		border-top none
		padding 0 20px 20px

.block2
	background url(../images/bg-block2.png) top left repeat
	height 1170px
	.block-title,
	.block-title .width1000
		background url(../images/title-block2.png) center 8px no-repeat
		height 90px

.deal-box
	width 940px
	margin 0 auto
	li
		float left
		margin 4px
		_margin 4px 2px
		width 284px
		height 320px
		padding 10px
		background-color #fff
		img
			width 284px
			height 175px
		.deal-text
			margin-top 5px
			height 145px
			h3
				border-bottom 1px solid #d1d1d1
				margin-bottom 3px
				overflow hidden
				white-space nowrap
				text-overflow ellipsis
				word-warp normal
				a
					font-size 26px
					font-weight bold
					color #240801
					line-height 38px
			p
				width 284px
				height 54px
				overflow hidden
			.deal-btn
				display block
				width 109px
				height 30px
				background url(../images/deal-btn.png)
				margin 10px auto 0
				
.block3
	background url(../images/bg-block3.png) top left repeat
	height 510px
	.block-title,
	.block-title .width1000
		background url(../images/title-block3.png) center 20px no-repeat
		height 90px
	.width1000
		text-align center
		img
			margin 20px auto 0

.float-layer
	position absolute
	width 0
	height 0
	left 0
	top 0
	z-index 100
.pop-layer-button
	position absolute
	left 70px
	top 70px
	width 317px
	height 317px
	&.login
		background url("../images/popup/button-login.png") no-repeat center center
	&.ready
		background url("../images/popup/button-ready.png") no-repeat center center
	&.no-chance
		background url("../images/popup/button-no-chance.png") no-repeat center center
	a.btn
		display block
		width 197px
		height 197px
		position absolute
		left 60px
		top 60px
.pop-layer-result
	position fixed
	_position absolute
	left 7px
	top -22px
	width 450px
	height 250px
	z-index 1001
	&.tanyue,
	&.chibanwu,
	&.shibanjie,
	&.cooked,
	&.youle,
	&.wanyu,
	&.mizi,
	&.hanlinxuan
		background url("../images/popup/popup-win.png") no-repeat
	&.noprize1,
	&.noprize2,
	&.noprize3
		background url("../images/popup/popup-lose.png") no-repeat
	.close-button
		position absolute
		right 10px
		top 10px
		display block
		width 19px
		height 19px
		background url(../images/popup/close-button.png) no-repeat
	.btn
		display block
		width 150px
		text-align center
		color #fff
		text-decoration none
		height 64px
		line-height 40px
		font-size 20px
		font-weight bold
		margin 0px auto 20px
		background url(../images/popup/btn-bg.png) repeat-x


.noprize1,
.noprize2,
.noprize3
	.popup-title
		padding-top 50px
		height 65px
		line-height 65px
		font-size 23px
		text-align center
		color #ff7121
		font-weight bold
		overflow hidden
		text-overflow ellipsis
		white-space nowrap
		max-width 100%
		background url(../images/popup/bg-line.png) center bottom no-repeat
	.popup-text
		padding 10px
		height 30px
		font-size 13px
		text-align center
		color #515050
	.btn-group
		padding 20px 20px 0 20px

.overlay
	width 100%
	height 100%
	background-color rgba(0, 0, 0, .75)
	z-index 1000
	position fixed
	_position absolute
	top 0
	left 0

